{
  "version": "3.4",
  "rules": [
    {
      "id": "CG0001",
      "description": "STUDYID, DOMAIN, and USUBJID are required for all SDTM domains",
      "severity": "error",
      "category": "Structure",
      "checkerType": "no-duplicate-key",
      "config": {
        "keyVariables": ["STUDYID", "DOMAIN", "USUBJID"]
      }
    },
    {
      "id": "CG0002",
      "description": "Date/time variables must use ISO 8601 format",
      "severity": "warning",
      "category": "Formatting",
      "checkerType": "iso8601-date",
      "appliesTo": ["DM"],
      "variables": ["RFSTDTC", "RFENDTC", "DTHDTC"],
      "config": {}
    },
    {
      "id": "CG0003",
      "description": "Start date must come before end date",
      "severity": "warning",
      "category": "Content",
      "checkerType": "datetime-order",
      "appliesTo": ["DM"],
      "config": {
        "startVariable": "RFSTDTC",
        "endVariable": "RFENDTC"
      }
    },
    {
      "id": "CG0010",
      "description": "SEX must use controlled terminology",
      "severity": "warning",
      "category": "Content",
      "checkerType": "value-in-codelist",
      "appliesTo": ["DM"],
      "config": {
        "variable": "SEX",
        "codeList": "SEX"
      }
    },
    {
      "id": "CG0011",
      "description": "AGEU must use controlled terminology when AGE is present",
      "severity": "warning",
      "category": "Content",
      "checkerType": "required-if",
      "appliesTo": ["DM"],
      "config": {
        "conditionVariable": "AGE",
        "requiredVariable": "AGEU"
      }
    },
    {
      "id": "CG0012",
      "description": "AGEU must use controlled terminology",
      "severity": "warning",
      "category": "Content",
      "checkerType": "value-in-codelist",
