{
  "name": "thunderstruck-language",
  "version": "0.1.0",
  "description": "Thunderstruck language definition using Langium",
  "type": "module",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "tsc -b tsconfig.json && node ./scripts/copy-grammar.js",
    "watch": "tsc -b tsconfig.json --watch",
    "langium:generate": "langium generate",
    "langium:watch": "langium generate --watch",
    "clean": "rm -rf lib",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "keywords": [
    "langium",
    "dsl",
    "clinical-trials",
    "statistical-analysis"
  ],
  "author": "Statistical Computing & Data Science Team",
  "license": "MIT",
  "dependencies": {
    "langium": "^3.5.0",
    "vscode-languageserver": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "jest": "^30.2.0",
    "langium-cli": "^3.3.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
